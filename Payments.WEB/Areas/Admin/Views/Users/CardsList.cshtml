@model IEnumerable<Payments.BLL.DTO.CardDto>

<div class="clearfix">
    <table class="table">
        <thead>
            <tr>
                <th class="col-md-1">Card number</th>
                <th>Card type</th>
                <th>Expiry date</th>
                <th>CVV</th>
                <th>Holder</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model)
            {
                <tr>
                    <td> @card.CardNumber </td>
                    <td> @card.CreditCardTypes </td>
                    <td> @card.ExpiryDate </td>
                    <td> @card.CVV </td>
                    <td> @card.Holder </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteCard", new { id = card.CardNumber }) |
                        @Html.ActionLink("Edit", "EditDebitCard", new { id = card.CardNumber })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>