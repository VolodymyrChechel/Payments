@model IEnumerable<CardViewModel>

<h2> Cards' menu </h2>

<h4 class="text-danger"> @ViewBag.Message </h4>

@if (Model.Count() != 0)
{
    <div class="clearfix">
        <table class="table">
            <thead>
            <tr>
                <th class="col-md-1">Card number</th>
                <th>Account</th>
                <th>Card type</th>
                <th>Expiry date</th>
                <th>CVV</th>
                <th>Holder</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var card in Model)
            {
                <tr>
                    <td> @card.CardNumber </td>
                    <td> @card.AccountAccountNumber </td>
                    <td> @card.CreditCardTypes </td>
                    <td> @card.ExpiryDate </td>
                    <td> @card.CVV </td>
                    <td> @card.Holder </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <h4 class="text-danger"> This user has no card </h4>
}

@Html.ActionLink("Create a new card", "CreateCard", null, new {@class = "btn btn-success"})