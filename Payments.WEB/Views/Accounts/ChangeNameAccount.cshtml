@model Payments.WEB.Models.DebitAccountViewModel

@{
    ViewBag.Title = "Editing Account";
}

<h2> Edit account's name - @Model.AccountNumber </h2>

@using (Html.BeginForm("ChangeNameAccount", "Accounts", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.AccountNumber)

    <div class="text-danger">
        @Html.ValidationSummary(false)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10"> @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } }) </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success">
        </div>
    </div>
}
